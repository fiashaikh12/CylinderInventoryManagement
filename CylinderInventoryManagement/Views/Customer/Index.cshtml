@model CIM.Entities.ClsCustomerModel

@{
        ViewBag.Title = "Search Customer";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
<style>
    .example-modal .modal {
        position: relative;
        top: auto;
        bottom: auto;
        right: auto;
        left: auto;
        display: block;
        z-index: 1;
    }

    .example-modal .modal {
        background: transparent !important;
    }
    .autocomplete {
        position: relative !important;
        display: inline-block !important;
        z-index: 1050 !important;
    }

    .ui-autocomplete {
        position: absolute !important;
        border: 1px solid #d4d4d4 !important;
        border-bottom: none !important;
        border-top: none !important;
        z-index: 1100 !important;
        /*position the autocomplete items to be the same width as the container:*/
        top: 26% !important;
        left: 575px !important;
        right: 0 !important;
        width:615px !important;
    }

        .ui-autocomplete li {
            padding: 8px !important;
            cursor: pointer !important;
            background-color: #fff !important;
            border-bottom: 1px solid #d4d4d4 !important;
        }

            /*when hovering an item:*/
            .autocomplete-items div:hover {
                background-color: #e9e9e9;
            }

    /*when navigating through the items using the arrow keys:*/
    .autocomplete-active {
        background-color: DodgerBlue !important;
        color: #ffffff;
    }

</style>
<!-- Main content -->
<section class="content">
    <!-- SELECT2 EXAMPLE -->
    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">Search Customer</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
            </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div class="form-group">
                        <input class="form-control autocomplete" id="userid" placeholder="Search Customer" />
                        <input type="hidden" id="hdncustid" name="custId" value="">
                    </div>
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal-default">
                        Add Customer
                    </button>
                </div>
            </div>
            <br />
            <div class="customer-cylinder hidden validate-form">
                <div class="row">
                    <div class="col-md-4">
                        <label>Challan Number</label>
                        <input type="text" class="form-control textbox" name="ChallanNumber" id="ChallanNumber" placeholder="Challan Number" />
                        <span class="not-required error">Challan number required</span>
                    </div>
                    <div class="col-md-4">
                        <label>Deposit Amount</label>
                        <input type="text" class="form-control textbox numeric-without-decimal" name="DepositAmount" id="DepositAmount" placeholder="Deposit Amount" />
                        <span class="not-required error">Deposit amount required</span>
                    </div>
                    <div class="col-md-4">
                        <label>Return Deposit</label>
                        <input type="text" class="form-control textbox numeric-without-decimal" name="ReturnDeposit" id="ReturnDeposit" placeholder="Return Deposit" />
                        <span class="not-required error">Return deposit required</span>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-xs-12">
                        <div class="box">
                            <div id="purchased-cylinder">
                            </div>
                        </div>
                        <input type="button" class="btn btn-primary submit" value="Submit" />
                    </div>
                </div>
            </div>
        </div>
    </div>
