@model List<CIM.Entities.ClsProductDetailModel>

@{
    ViewBag.Title = "ViewProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="content">
    <div class="row">
        <div class="col-xs-12">

            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Inventory List</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model[0].CategoryName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model[0].SubCategoryName)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model[0].IsDepositAllowed)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model[0].IsExchangeAllowed)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model[0].AvailableQuantity)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model[0].Quantity)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CategoryName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SubCategoryName)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.IsDepositAllowed)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IsExchangeAllowed)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AvailableQuantity)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Quantity)
                                            @*<a href="#">
                                                <span class="glyphicon glyphicon-plus"></span>
                                            </a>
                                            <a href="#">
                                                <span class="glyphicon glyphicon-minus"></span>
                                            </a>*@
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model[0].CategoryName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model[0].SubCategoryName)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model[0].IsDepositAllowed)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model[0].IsExchangeAllowed)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model[0].AvailableQuantity)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model[0].Quantity)
                                </th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>
</section>


