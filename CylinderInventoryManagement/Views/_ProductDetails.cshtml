@model List<CIM.Entities.ClsProductDetailModel>
<div class="box-header">
    <h3 class="box-title">Product Details</h3>
</div>
<!-- /.box-header -->
<div class="box-body">
    <table id="example1" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model[0].CategoryName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].SubCategoryName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].IsDepositAllowed)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].IsExchangeAllowed)
                </th>
                <th>@Html.DisplayNameFor(model => model[0].Quantity)</th>
                <th>@Html.DisplayNameFor(model => model[0].Price)</th>
                <th>@Html.DisplayNameFor(model => model[0].AvailableQuantity)</th>
                <th>@Html.DisplayNameFor(model => model[0].DepositAmount)</th>
                <th>@Html.DisplayNameFor(model => model[0].PurchaseQuantity)</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
            <tr>
                @Html.HiddenFor(modelItem => item.ProductId, new { @class = "userid" })
                <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                <td>@Html.DisplayFor(modelItem => item.SubCategoryName)</td>
                <td>@Html.DisplayFor(modelItem => item.IsDepositAllowed)</td>
                <td>@Html.DisplayFor(modelItem => item.IsExchangeAllowed)</td>
                <td class="quantity">@Html.DisplayFor(modelItem => item.Quantity)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>@Html.DisplayFor(modelItem => item.AvailableQuantity)</td>
                <td>@Html.TextBoxFor(modelItem => item.DepositAmount, new { @class = item.IsDepositAllowed ? "" : "disabled" })</td>
                <td>@Html.TextBoxFor(modelItem => item.PurchaseQuantity)</td>
                <td><a id="updateCust" class="btn btn-primary">Buy</a></td>
            </tr>
                }
            }
        </tbody>
    </table>
</div>
